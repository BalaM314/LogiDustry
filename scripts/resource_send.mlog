# Variables
set utype @flare
set rsc @copper
set rsc_cap 100
# Check alive function
set f_checkalive @counter
# Jump to next instruction if unit is alive
op add __temp @counter 3
jump __temp notEqual @unit @null
ubind utype
# Main loop
set f_main @counter
set @counter f_checkalive
# repeat main loop
set @counter f_main
